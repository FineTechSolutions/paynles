<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <Target Name="ExcludeFilesUploadedFromPublish" BeforeTargets="CopyFilesToPublishDirectory">
    <ItemGroup>
      <Content Remove="FilesUploaded\**" />
      <None Remove="FilesUploaded\**" />
      <Compile Remove="FilesUploaded\**" />
      <EmbeddedResource Remove="FilesUploaded\**" />
      <ExcludeFromPublish Include="FilesUploaded\**" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <!-- Tell MSBuild both files are real -->
    <Content Update="FilesUploaded\TrackedProducts.json" />
    <Content Update="FilesUploaded\TrackedLogs.txt" />
  </ItemGroup>
  <ItemGroup>
    <None Include="wwwroot\pitch.html" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="FilesUploaded\" />
    <Folder Include="Pitch\" />
    <Folder Include="wwwroot\App_Data\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EPPlus" Version="8.0.8" />
    <PackageReference Include="Azure.Identity" Version="1.12.0" />
    <PackageReference Include="Keepa" Version="2.0.0" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="5.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
</Project>
