@{
    ViewData["Title"] = "Contact";
    ViewData["MetaDescription"] = "Get in touch with Paynles — questions about pricing, partnerships, or support.";
    ViewData["Canonical"] = "https://paynles.com/Home/Contact";
}

<h2>Contact Paynles</h2>
<p>Questions, media, or partnerships? Use the form below or email <a href="mailto:admin@paynles.com">admin@paynles.com</a>.</p>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-controller="Home" asp-action="Contact" method="post" class="mt-3" novalidate>
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="email" class="form-label">Your Email</label>
        <input id="email" name="email" type="email" class="form-control" required />
        <div class="form-text">We’ll reply to this address.</div>
    </div>

    <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Send</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "Organization",
      "name": "Paynles",
      "url": "https://paynles.com/",
      "email": "admin@paynles.com"
    }
</script>
